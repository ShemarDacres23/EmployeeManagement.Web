@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - EduCa Academy</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-card {
            background-color: #ffffff;
            padding: 2rem;
            border-radius: 1rem;
            box-shadow: 0 0.75rem 1.5rem rgba(0, 0, 0, 0.1);
        }

        .form-control {
            border-radius: 2rem;
        }

        .btn-primary {
            border-radius: 2rem;
        }

        h1, h4 {
            font-weight: 600;
        }

        a {
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container">
        <!-- Logo Section -->
        <div class="text-center mb-4">
            <img src="~/AdminLTE/dist/img/EducaLogo.png" alt="EduCa Logo" class="brand-image img-circle elevation-3" style="opacity: .8; width: 100px;" />
        </div>

        <h2 class="text-center">EduCa Academy Employee Management System</h2>

        <h1 class="mb-4 text-center">@ViewData["Title"]</h1>

        <div class="row justify-content-center">
            <div class="col-md-4">
                <section>
                    <form method="post" class="login-card">
                        <h4 class="mb-3">Enter your email to reset password</h4>
                        <hr />
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">Email Address</label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>

                        <div class="text-center">
                            <p><a asp-page="./Login">Back to Login</a></p>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>

    <!-- Bootstrap Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
